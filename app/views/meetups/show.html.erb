
<div class="container-midpoint meetups-show">

  <div>
    <div class="mb-4">
      <%= link_to "Best", meetup_path(@meetup.id), class:"btn-midpoint btn-primary-midpoint btn-small-midpoint"%>
      <%= link_to "Cheapest", meetup_path(@meetup.id, sort: "total_price"), class:"btn-midpoint btn-tertiary-midpoint btn-small-midpoint"%>
      <%= link_to "Fastest", meetup_path(@meetup.id, sort: "total_duration"), class:"btn-midpoint btn-tertiary-midpoint btn-small-midpoint"%>
    </div>
    <div class="cards-midpoint-grid-2">
      <% @destinations.each do |destination| %>
        <%= render "destinations/destination_card", destination: destination %>
      <% end %>
    </div>
  </div>

  <div class="sticky-container">
    <h4>Meetup from <%= @meetup.city_from_1 %> and <%=  @meetup.city_from_2 %></h4>
    <div style="width: 100%; height: 85vh;"
      class="card-midpoint map"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
      data-map-departure-city1-lat-value="<%= @meetup.departure_city1_lat %>"
      data-map-departure-city1-lon-value="<%= @meetup.departure_city1_lon %>"
      data-map-departure-city2-lat-value="<%= @meetup.departure_city2_lat %>"
      data-map-departure-city2-lon-value="<%= @meetup.departure_city2_lon %>"
      data-map-midpoint-value="<%= @midpoint_destination %>"
      >
      <%# Add new values for d cities %>
    </div>
  </div>

</div>
