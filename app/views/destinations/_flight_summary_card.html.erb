<div class="card-midpoint mb-3">
  <div class="d-flex w-100 justify-content-between align-items-center">
    <h4><%= destination.meetup["city_from_#{flight}"] %> to <%= destination.fly_to_city %></h4>
    <h5><%= destination.meetup["fly_from_#{flight}"] %> to <%= destination.fly_to_code %></h5>
  </div>

  <br>

  <div class="d-flex w-100 justify-content-between align-items-end">
    <p>Duration</p>
    <p><%= destination["duration_#{flight}"] / 60 / 60 %> h <%= destination["duration_#{flight}"] / 60 % 60 %> mins </p>
  </div>

  <div class="d-flex w-100 justify-content-between align-items-end">
    <p>Departure</p>
    <p><%= destination["local_departure_#{flight}"].strftime('%d/%m/%Y')%> at <%= destination["local_departure_#{flight}"].strftime('%I:%M %p')%>  </p>
  </div>

  <div class="d-flex w-100 justify-content-between align-items-end">
    <p>Arrival</p>
    <p><%= destination["local_arrival_#{flight}"].strftime('%d/%m/%Y')%> at <%= destination["local_arrival_#{flight}"].strftime('%I:%M %p')%></p>
  </div>

  <div class="d-flex w-100 justify-content-between align-items-end">
    <p>Airline</p>
    <p><%= destination["airlines_#{flight}"].split(", ").to_sentence%> </p>
  </div>

  <div class="d-flex w-100 justify-content-between align-items-end">
    <p>Price</p>
    <h4><%= destination["price_#{flight}"].truncate %>â‚¬</h4>
  </div>

  <br>

  <div class="d-flex w-100 justify-content-between align-items-end">
    <a href="" class="btn-midpoint btn-secondary-midpoint">Copy Link</a>
    <%= link_to "Buy Flight", destination["deep_link_#{flight}"], :target => "_blank", class: "btn-midpoint btn-primary-midpoint"  %>
  </div>


</div>
